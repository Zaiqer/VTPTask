@model List<Event>

@{ ViewData["Title"] = "Index"; }

<section class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card mt-1">
                    <div class="d-flex justify-content-between align-content-center">
                        <h2 class="card-title font-weight-bolder mt-4 ml-4">Tədbirlər</h2>
                        <a asp-action="Create" class="btn btn-primary mt-4 mr-4"><i class="fa-solid fa-plus mr-2"></i>Yeni</a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Ad</th>
                                    <th>Tarix</th>
                                    <th>Məkan</th>
                                    <th>Müddəti</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Event item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.Date
                                        </td>
                                        <td>
                                            @item.Place
                                        </td>
                                        <td>
                                            @item.Duration
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.Id">
                                                <lord-icon src="https://cdn.lordicon.com/ncxoarcp.json"
                                                           trigger="hover"
                                                           colors="primary:#3080e8"
                                                           state="hover"
                                                           style="width:35px;height:35px">
                                                </lord-icon>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id">
                                                <lord-icon src="https://cdn.lordicon.com/hkkhwztk.json"
                                                           colors="primary:#c7c116"
                                                           trigger="hover"
                                                           style="width:35px;height:35px">
                                                </lord-icon>
                                            </a>

                                            <a asp-action="Delete" asp-route-id="@item.Id">
                                                <lord-icon src="https://cdn.lordicon.com/jmkrnisz.json"
                                                           trigger="morph"
                                                           colors="primary:#e83a30"
                                                           state="morph-fill"
                                                           style="width:35px;height:35px">
                                                </lord-icon>
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <script src="https://cdn.lordicon.com/pzdvqjsp.js"></script>
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        });</script>
}
